<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:assetnest_wpf.Themes"
                    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf">


    <Style x:Key="MaterialDesignOutlinedTextFieldTextBox" 
           BasedOn="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
           TargetType="{x:Type TextBox}"
           >
        <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="10" />
    </Style>

    <Style x:Key="MaterialDesignOutlinedPasswordFieldPasswordBox" 
           BasedOn="{StaticResource MaterialDesignOutlinedPasswordFieldPasswordBox}"
           TargetType="{x:Type PasswordBox}"
           >
        <Setter Property="materialDesign:TextFieldAssist.TextFieldCornerRadius" Value="10" />
    </Style>

    <Style x:Key="MaterialDesignRaisedButton" 
           BasedOn="{StaticResource MaterialDesignRaisedButton}"
           TargetType="{x:Type Button}"
           >
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="10" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    

</ResourceDictionary>