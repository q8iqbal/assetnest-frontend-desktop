<Page x:Class="assetnest_wpf.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:assetnest_wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <DockPanel>
            <Menu x:Name="menu_top" DockPanel.Dock="Top" Height="27" Background="#FF7B4B">
                <MenuItem x:Name="menuHome" Foreground="White" Header="_Home" Height="26" Click="menuHome_Click" FontWeight="Bold"/>
                <MenuItem x:Name="menuStaff" Header="_Staffs" Height="26" Click="menuStaff_Click" FontWeight="Bold" Foreground="White" />
                <MenuItem x:Name="menuProfile" Header="_Profile" Height="27" Click="menuProfile_Click" Foreground="White" FontWeight="Bold"/>
            </Menu>
            <StackPanel></StackPanel>
            <Frame x:Name="secondFrame" Content="Frame" Margin="0"/>
        </DockPanel>
    </Grid>
</Page>
